		// LOAD EUGENE MAIL
		{
			"Action": "EditData",
			"Target": "Data/Mail",
			"Entries": {
				"{{ModId}}.EugeneQuestMail": "{{i18n:mail.eq.text}}%item quest {{ModId}}.SecretGift1 true%%[#]{{i18n:mail.eq.name}}",
