			}
		},
		
		{
			"Action": "EditData",
			"Target": "Data/Mail",
			"Entries": {
				"{{ModId}}.EugeneRecipeMail": "{{i18n:mail.eralt.text}}%item cookingRecipe {{ModId}}.StrawberryTea%%[#]{{i18n:mail.er.name}}"
			},
			"When": {
				"HasMod |contains=Eugene": true,
				"HasFlag": "jojaMember"
			}
		}
