				"{{ModId}}.WizardMail": "{{i18n:mail.wizard.text}}%item quest {{ModId}}.IntroQuest true %%[letterbg 2][#]{{i18n:mail.wizard.name}}",
				"{{ModId}}.Mail1": "{{i18n:mail.aelin1.text}}%item cookingRecipe {{ModId}}.PainTonic%%[letterbg 5][textcolor gray][#]{{i18n:mail.aelin1.name}}",
